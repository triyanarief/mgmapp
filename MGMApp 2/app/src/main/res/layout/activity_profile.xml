<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context="id.kosan.mgmapp.ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="274dp"
                android:layout_height="210dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                app:srcCompat="@drawable/people" />

            <TextView
                android:id="@+id/txtNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:text="Nama"/>

            <TextView
                android:id="@+id/txtCC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:text="Nomor Kartu"/>

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/profile_count"
                android:layout_margin="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Total Submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center" />

                <TextView
                    android:text="27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textSize="48sp"
                    android:id="@+id/txtCount" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/profile_count"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Ketentuan Insentif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center" />

                <TextView
                    android:text="
Pemberi referensi akan mendapat insentif untuk setiap Kartu Kredit Bank Mega yang telah disetujui, dengan skema sebagai berikut :

    a. Insentif Rp 200 ribu untuk kartu :
    1). Mega Travel Card
    2). Mega Visa Platinum

    b. Insentif Rp 100 ribu untuk kartu :
    1). Mega Barca Card
    2). Mega Visa Gold
    3). Metro Mega Card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textAlignment="left"
                    android:textSize="8sp"
                    android:id="@+id/txtCount" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>